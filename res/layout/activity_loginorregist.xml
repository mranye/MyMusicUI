<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginOrRegistActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/a32"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/start_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/a8u" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/start_btn_login"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_button_white"
            android:padding="5dip"
            android:text="手机号登录"
            android:textColor="#E40000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/start_btn_regist"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_button_white"
            android:padding="3dip"
            android:text="注册"
            android:textColor="#E40000"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="2px"
                android:layout_weight="1"
                android:background="@drawable/shape_line_gray_left" />

            <TextView
                android:id="@+id/start_tv_otherway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/tv_regist_otherway"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="2px"
                android:layout_weight="1"
                android:background="@drawable/shape_line_gray_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/start_iv_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/a3u" />

                <TextView
                    android:id="@+id/start_tv_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/weixin"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
               android:layout_marginLeft="12dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/start_iv_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/a3q" />

                <TextView
                    android:id="@+id/start_tv_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/qq"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/start_iv_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/a3s" />

                <TextView
                    android:id="@+id/start_tv_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/weibo"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="12dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/start_iv_wangyiemail"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:src="@drawable/a3n" />

                <TextView
                    android:id="@+id/start_tv_wangyiemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/wangyiemail"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>