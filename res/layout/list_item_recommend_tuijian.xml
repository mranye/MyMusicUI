<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/recommend_ll_tuijian_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <View 
            android:layout_height="18dp"
            android:layout_width="2dp"
            android:background="#E40000"/>

        <TextView
            android:id="@+id/recommend_tv_tuijian_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/tv_recommend_tuijian_title"/>

        <ImageView
            android:id="@+id/recommend_iv_tuijian_more"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/a7_" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/recommend_ll_tuijian1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/recommend_iv_tuijian1"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:src="@drawable/yh" />

                <TextView
                    android:id="@+id/recommend_tv_tuijian1"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="6dp"
                    android:text="@string/tv_recommend_tuijian1"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                 android:id="@+id/recommend_ll_tuijian2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/recommend_iv_tuijian2"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:src="@drawable/yh" />

                <TextView
                    android:id="@+id/recommend_tv_tuijian2"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="6dp"
                    android:text="@string/tv_recommend_tuijian2"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                 android:id="@+id/recommend_ll_tuijian3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/recommend_iv_tuijian3"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:src="@drawable/yh" />

                <TextView
                    android:id="@+id/recommend_tv_tuijian3"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="6dp"
                    android:text="@string/tv_recommend_tuijian3"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                 android:id="@+id/recommend_ll_tuijian4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/recommend_iv_tuijian4"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:src="@drawable/yh" />

                <TextView
                    android:id="@+id/recommend_tv_tuijian4"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="6dp"
                    android:text="@string/tv_recommend_tuijian4"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                 android:id="@+id/recommend_ll_tuijian5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/recommend_iv_tuijian5"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:src="@drawable/yh" />

                <TextView
                    android:id="@+id/recommend_tv_tuijian5"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="6dp"
                    android:text="@string/tv_recommend_tuijian5"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                 android:id="@+id/recommend_ll_tuijian6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/recommend_iv_tuijian6"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:src="@drawable/yh" />

                <TextView
                    android:id="@+id/recommend_tv_tuijian6"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="6dp"
                    android:text="@string/tv_recommend_tuijian6"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>